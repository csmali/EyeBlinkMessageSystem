<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tema"
    android:gravity="center"
    tools:context="com.example.ibrah.first.MainActivity">

    <Button
        android:id="@+id/HastaSilButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/HastaEkleButton"
        android:layout_alignLeft="@+id/HastaEkleButton"
        android:layout_alignRight="@+id/HastaEkleButton"
        android:layout_alignStart="@+id/HastaEkleButton"
        android:layout_centerInParent="true"
        android:background="@color/buton"
        android:text="Hasta Listesi" />

    <Button
        android:id="@+id/HastaEkleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HastaSilButton"
        android:layout_marginTop="80dp"
        android:background="@color/buton"
        android:text="HastalarÄ± Ekle" />

</RelativeLayout>
